---
import Header from "@components/Header.astro"
import Aside from "@components/Aside.astro"
import Footer from "@components/Footer.astro"

interface Props {
  title: string
  description: string
  canonicalUrlExtension?: string
}

const {
  title = "Kolayca Hesapla",
  description = "Kolayca hesapla ile matematik ve fizik hesaplarını hızlı şekilde yapabilirsiniz.",
  canonicalUrlExtension = "",
} = Astro.props
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content="hesapla, dönüştür" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Kolayca Hesapla" />
    <meta property="og:locale" content="tr_TR" />
    <meta property="og:url" content={"https://kolaycahesapla.com.tr/" + canonicalUrlExtension} />
    <meta property="og:type" content="website" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={"https://kolaycahesapla.com.tr/" + canonicalUrlExtension} />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:wght@400;500&family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "url": "https://kolaycahesapla.com.tr",
        "name": "Kolayca Hesapla",
        "description": "Tüm matematik ve fizik hesaplamalarını kolayca gerçekleştir.",
        "publisher": {
          "@type": "Organization",
          "name": "KolaycaHesapla",
          "logo": {
            "@type": "ImageObject",
            "url": "https://kolaycahesapla.com.tr/favicon.png",
            "width": 512,
            "height": 512
          }
        },
        "image": ["https://kolaycahesapla.com.tr/favicon.png"]
      }
    </script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BSKV4253CS"></script>
    <script>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag("js", new Date())

      gtag("config", "G-BSKV4253CS")
    </script>

    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <Header />
    <div id="main-container" class="flex flex-col justify-between">
      <div id="container" class="flex flex-col px-2 pt-2 lg:px-6 min-h-full">
        <div class="flex flex-col lg:flex-row lg:space-x-12 lg:justify-around">
          <Aside />
          <main class="flex bg-white rounded-md border-black shadow-md flex-col w-full p-2 gap-4 lg:w-2/3">
            <slot />
          </main>
        </div>
      </div>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  body {
    font-family: "Roboto";
    background: #eeeeee;
  }
  h1 {
    @apply text-center font-semibold text-4xl;
  }

  p,
  option,
  label,
  select {
    @apply font-medium text-base;
  }

  ::-webkit-scrollbar {
    width: 1.5rem;
  }

  ::-webkit-scrollbar-track {
    background-color: #264653;
  }

  ::-webkit-scrollbar-thumb {
    border-width: 0.25rem;
    border-style: solid;
    border-radius: 0.375rem;
    border-color: #264653;
    background-color: #e9c46a;
  }

  .koyu-btn {
    @apply py-2 px-2 w-36 bg-koyu border-0 text-white  font-medium text-base rounded-md text-center;
    box-shadow: 0 10px #aaa;
    transition:
      transform 100ms linear,
      box-shadow 100ms linear;
  }
  .koyu-btn:hover {
    transform: translateY(1px);
    box-shadow: 0 9px #aaa;
  }

  .koyu-btn:active {
    transform: translateY(5px);
    box-shadow: 0 5px #888;
  }

  .acik-btn {
    @apply py-2 px-2 w-36 bg-acik border-0 text-gray-900 font-medium text-base  rounded-md text-center;
    box-shadow: 0 10px #333;
    transition:
      transform 100ms linear,
      box-shadow 100ms linear;
  }

  .acik-btn:hover {
    transform: translateY(1px);
    box-shadow: 0 9px #333;
  }

  .acik-btn:active {
    transform: translateY(5px);
    box-shadow: 0 5px #333;
  }

  input {
    appearance: none;
    @apply rounded-md px-2 py-1 border-0 focus:border-koyu text-white font-medium text-base bg-gray-700;
  }

  input[type="number"] {
    -moz-appearance: textfield;
  }

  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  select {
    @apply rounded-md border-gray-800 mx-2;
    border-width: 0.1rem;
  }

  option:checked {
    @apply bg-acik;
  }
</style>
